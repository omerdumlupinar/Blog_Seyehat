@model Blog_Seyahat.Models.Sınıflar.Blog
@{
    ViewBag.Title = "YeniBlog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2 class="text-center">Yeni Blog Ekleme</h2>
<br />


<div class="container col-lg-12">
    <form class="form-group" method="post">
        <label>Başlık</label>
        @Html.TextBoxFor(x => x.Baslik, new { @class = "form-control" })
        <br />
        <label>Tarih</label>
        @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control" })
        <br />
        <label>Açıklama</label>
        @Html.TextAreaFor(x => x.Aciklama, new { @class = "form-control" })
        <br />
        <label>Fotograf URL</label>
        @Html.TextBoxFor(x => x.BlogImage, new { @class = "form-control" })
        <br />
        <button class="btn btn-success">Blogu Yayınla</button>

    </form>

</div>

