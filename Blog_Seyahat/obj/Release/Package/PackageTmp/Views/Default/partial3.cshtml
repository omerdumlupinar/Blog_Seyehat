
@using Blog_Seyahat.Models.Sınıflar
@model List<Blog>



    <h4>En İyi Bloglar</h4>
    <div class="box-left">

        @foreach (var x in Model)
        {
            <div class="bot-img">
                <img src="@x.BlogImage" alt="" />
            </div>
            <div class="bot-desc">
                <p>@x.Aciklama.Substring(0, 50)</p>
            </div>
            <div class="clear"></div>
        }

    </div>


