@using Blog_Seyahat.Models.Sınıflar
@model List<Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}


    <div class="header-banner">
        <div class="wrap">
            <div class="banner">
                <div class="indent">
                    <h2 class="indent-left margin-bot"></h2>
                    <div class="banner-left">
                        <div class="con-text">
                            <div class="grid1-img">
                                <img src="~/web/images/glass.png" alt="">
                            </div>
                            <div class="grid1-desc">
                                <p>Restorantlar</p> 
                            </div>
                            <div class="clear"></div>
                        </div>
                        <div class="con-text">
                            <div class="grid1-img">
                                <img src="~/web/images/flight.png" alt="">
                            </div>
                            <div class="grid1-desc">
                                <p>Uçuşlar</p>
                            </div>
                            <div class="clear"></div>
                        </div>
                        <div class="con-text">
                            <div class="grid1-img">
                                <img src="~/web/images/group.png" alt="">
                            </div>
                            <div class="grid1-desc">
                                <p>Yapılacak Seyahatler</p>
                            </div>
                            <div class="clear"></div>
                        </div>
                        <div class="con-text">
                            <div class="grid1-img">
                                <img src="~/web/images/key.png" alt="">
                            </div>
                            <div class="grid1-desc">
                                <p>Araç Kiralama</p>
                            </div>
                            <div class="clear"></div>
                        </div>
                        <div class="clear"></div>
                    </div>
                    <div class="header_bottom_right_images">


                        <div class="slider" style="width:600px;height:350px;">
                            <ul class="rslides" id="slider1">

                                @foreach (var x in Model)
                                {
                                    <li><img src="@x.BlogImage" alt="" style="width:600px;height:350px;"></li>

                                }


                            </ul>
                        </div>


                    </div>
                </div>
                <div class="clear"></div>
            </div>
            <div class="clear"></div>
        </div>
    </div>

    <div class"content">
        <div class="wrap">
            <div class="wrapper">
                <div class="con-top" style="padding-top: 30px;">
                    <h3>Gezi Seyahat Bloğuma Hoşgeldiniz</h3>
                    <p>
                        &nbsp;&nbsp;&nbsp;&nbsp;
                        Bu projeyi Mart 2023 tarihinde başlatıp ana sayfa düzenlemelerine
                        getirdik. Gezip gördüğüm yerleri
                        sizlerle paylaşmak için kodlamasını tamamen kendim yaptığım mvc5
                        üzerine kurulu dinamik bir web projesi geliştirdik. Hem
                        Türkiye'den hem de yurt dışından gezip gördüğüm yerleri blog
                        yazıları olarak sizlerle paylaşma niyetindeyim. Umuyorum ki
                        yazdıklarımı beğenirsiniz, keyifli okumalar, sağlıklı günler.
                    </p>
                </div>

                @Html.Action("partial1","Default")


                <div class="grids">
                    <div class="box1">
                        <div class="padding">
                            @Html.Action("partial2", "Default")
                        </div>

                        <div class="padding1">
                            @Html.Action("partial3", "Default")
                            @Html.Action("partial4", "Default")
                        </div>
                        <div class="clear"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>



