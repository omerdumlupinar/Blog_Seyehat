
@using Blog_Seyahat.Models.Sınıflar
@model List<Blog>


<div class="" style="padding-bottom: 50px; padding-top: 30px;">
    @foreach (var x in Model)
    {
        <div class="right" style="padding-left:20px">
            <div class="bot-left">
                <img src="@x.BlogImage" alt=""  style="width:300px; height:170px;"/>
            </div>
            <div class="left-text">
                <h4>@x.Baslik</h4>
                
                <p>@x.Aciklama.Substring(0,200) ...</p>
                <span class="doller" style="font-size:small">@x.Tarih.ToShortDateString()</span>
                <p><a href="/Blog/BlogDetay/@x.ID"><span class="read">Devamını Oku >></span></a></p>
            </div>
        </div>

        //@Html.Action("partial2","Default")

    }



    <div class="clear"></div>
</div>

